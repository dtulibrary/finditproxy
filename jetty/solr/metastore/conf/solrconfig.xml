<?xml version="1.0" encoding="UTF-8"?>
<config>
    <abortOnConfigurationError>${solr.abortOnConfigurationError:true}</abortOnConfigurationError>
    <luceneMatchVersion>LUCENE_42</luceneMatchVersion>
    <dataDir>${solr.data.dir:}</dataDir>
    <directoryFactory name="DirectoryFactory" class="${solr.directoryFactory:solr.StandardDirectoryFactory}"/>

    <indexConfig>
        <useCompoundFile>false</useCompoundFile>
        <ramBufferSizeMB>${metastore.ram_buffer_size_mb:2048}</ramBufferSizeMB>
        <mergeFactor>10</mergeFactor>
        <maxBufferedDocs>${metastore.max_buffered_docs:1073741824}</maxBufferedDocs>
        <unlockOnStartup>false</unlockOnStartup>
        <reopenReaders>true</reopenReaders>
        <maxFieldLength>32768</maxFieldLength>
        <writeLockTimeout>1000</writeLockTimeout>
        <commitLockTimeout>10000</commitLockTimeout>
        <lockType>native</lockType>

        <mergePolicy class="org.apache.lucene.index.TieredMergePolicy">
            <int name="maxMergeAtOnceExplicit">30</int>
            <int name="maxMergeAtOnce">10</int>
            <double name="segmentsPerTier">20</double>
            <double name="maxMergedSegmentMB">20000</double>
        </mergePolicy>

        <mergeScheduler class="org.apache.lucene.index.ConcurrentMergeScheduler">
            <int name="maxMergeCount">${metastore.merge.max_merge_count:8}</int>
            <int name="maxThreadCount">${metastore.merge.max_thread_count:8}</int>
        </mergeScheduler>
    </indexConfig>

    <updateHandler class="solr.DirectUpdateHandler2">
        <updateLog>
          <str name="dir">${solr.ulog.dir:}</str>
        </updateLog>
        <autoCommit>
            <maxTime>${metastore.auto_commit.max_time:15000}</maxTime>
            <maxDocs>${metastore.auto_commit.max_docs:100000}</maxDocs>
            <openSearcher>false</openSearcher>
        </autoCommit>
    </updateHandler>

    <requestHandler name="/update" class="solr.UpdateRequestHandler"/>

    <requestDispatcher handleSelect="true">
        <requestParsers enableRemoteStreaming="false"
                        multipartUploadLimitInKB="2048000"/>
        <httpCaching lastModFrom="openTime" etagSeed="Solr">
            <cacheControl>max-age=86400, public, must-revalidate</cacheControl>
        </httpCaching>
    </requestDispatcher>

    <query>
        <queryResultWindowSize>30</queryResultWindowSize>
        <useColdSearcher>false</useColdSearcher>
        <maxWarmingSearchers>2</maxWarmingSearchers>

        <filterCache class="solr.FastLRUCache"
                     size="${metastore.filter_cache.size:204800}"
                     initialSize="${metastore.filter_cache.initial_size:102400}"
                     autowarmCount="${metastore.filter_cache.autowarm_count:102400}"/>

        <queryResultCache class="solr.LRUCache"
                          size="${metastore.query_result_cache.size:20480}"
                          initialSize="${metastore.query_result_cache.initial_size:10240}"
                          autowarmCount="${metastore.query_result_cache.autowarm_count:10240}"/>

        <documentCache class="solr.LRUCache"
                       size="${metastore.document_cache.size:20480}"
                       initialSize="${metastore.document_cache.initial_size:10240}"
                       autowarmCount="${metastore.document_cache.autowarm_count:10240}"/>

        <fieldValueCache class="solr.FastLRUCache"
                         size="${metastore.field_value_cache.size:20480}"
                         autowarmCount="${metastore.field_value_cache.autowarm_count:10240}"
                         showItems="${metastore.field_value_cache.show_items:32}"/>

        <listener event="firstSearcher" class="solr.QuerySenderListener">
            <arr name="queries">
                <lst>
                    <str name="q">*:*</str>
                    <str name="facet">true</str>
                    <str name="facet.field">format</str>
                    <str name="facet.field">journal_title_facet</str>
                    <str name="facet.field">pub_date_tsort</str>
                    <str name="facet.field">author_facet</str>
                </lst>
            </arr>
        </listener>
        <listener event="newSearcher" class="solr.QuerySenderListener">
            <arr name="queries">
                <lst>
                    <str name="q">*:*</str>
                    <str name="facet">true</str>
                    <str name="facet.field">format</str>
                    <str name="facet.field">journal_title_ts</str>
                    <str name="facet.field">pub_date_tsort</str>
                    <str name="facet.field">author_facet</str>
                </lst>
            </arr>
        </listener>
    </query>

    <requestHandler name="search" class="solr.SearchHandler" default="true">
        <lst name="defaults">
            <str name="echoParams">explicit</str>
            <str name="fl">*,score</str>
        </lst>
    </requestHandler>

    <requestHandler name="/toshokan" class="solr.SearchHandler" default="false">
        <lst name="defaults">

            <str name="defType">edismax</str>
            <str name="echoParams">explicit</str>

            <str name="q.alt">*:*</str>
            <str name="mm">100%</str>
            <str name="qf">
                title_ts^10
                subtitle_ts
                abstract_ts
                author_ts
                editor_ts
                affiliation_ts
                keywords_ts
                issn_ss
                isbn_ss
                journal_title_ts
                publisher_ts
                pub_date_ti
                doi_s
            </str>
            <str name="pf">
                title_ts^5
                subtitle_ts
                abstract_ts
                author_ts
                editor_ts
                affiliation_ts
                keywords_ts
                issn_ss
                isbn_ss
                journal_title_ts
                publisher_ts
                pub_date_ti
                doi_s
            </str>
            <str name="author_qf">
                author_ts
                editor_ts
            </str>
            <!--
            <str name="author_pf"></str>
            -->
            <str name="title_qf">
                title_ts
                subtitle_ts
                journal_title_ts
            </str>
            <!--
            <str name="title_pf"></str>
            -->
            <str name="subject_qf">
                keywords_ts
            </str>
            <!--
            <str name="subject_pf"></str>
            -->

            <str name="f.dedup.qf"        >cluster_id_ss</str>
            <str name="f.cluster.qf"      >cluster_id_ss</str>
            <str name="f.clusterid.qf"    >cluster_id_ss</str>
            <str name="f.member.qf"       >member_id_ss</str>
            <str name="f.memberid.qf"     >member_id_ss</str>
            <str name="f.source.qf"       >source_ss</str>
            <str name="f.sourcetype.qf"   >sourcetype_ss</str>

            <str name="f.toc.qf"          >toc_key_s</str>
            <str name="f.toc_key.qf"      >toc_key_s</str>

            <str name="f.ti.qf"           >title_ts</str>
            <str name="f.title.qf"        >title_ts</str>
            <str name="f.au.qf"           >author_ts</str>
            <str name="f.author.qf"       >author_ts</str>
            <str name="f.authors.qf"      >author_ts</str>
            <str name="f.ed.qf"           >editor_ts</str>
            <str name="f.editor.qf"       >editor_ts</str>
            <str name="f.editors.qf"      >editor_ts</str>
            <str name="f.af.qf"           >affiliation_ts</str>
            <str name="f.affiliation.qf"  >affiliation_ts</str>
            <str name="f.ab.qf"           >abstract_ts</str>
            <str name="f.abstract.qf"     >abstract_ts</str>
            <str name="f.jo.qf"           >journal_title_ts</str>
            <str name="f.journal.qf"      >journal_title_ts</str>
            <str name="f.journaltitle.qf" >journal_title_ts</str>
            <str name="f.journal_title.qf">journal_title_ts</str>
            <str name="f.pu.qf"           >publisher_ts</str>
            <str name="f.pub.qf"          >publisher_ts</str>
            <str name="f.publisher.qf"    >publisher_ts</str>
            <str name="f.ke.qf"           >keywords_ts</str>
            <str name="f.kw.qf"           >keywords_ts</str>
            <str name="f.key.qf"          >keywords_ts</str>
            <str name="f.keyword.qf"      >keywords_ts</str>
            <str name="f.keywords.qf"     >keywords_ts</str>
            <str name="f.doi.qf"          >doi_ss</str>

            <str name="f.isbn.qf"         >isbn_ss</str>
            <str name="f.issn.qf"         >issn_ss</str>

            <str name="f.y.qf"            >pub_date_tis</str>
            <str name="f.year.qf"         >pub_date_tis</str>
            <str name="f.v.qf"            >journal_vol_ssf</str>
            <str name="f.vol.qf"          >journal_vol_ssf</str>
            <str name="f.volume.qf"       >journal_vol_ssf</str>
            <str name="f.i.qf"            >journal_issue_ssf</str>
            <str name="f.iss.qf"          >journal_issue_ssf</str>
            <str name="f.issue.qf"        >journal_issue_ssf</str>
            <str name="f.p.qf"            >journal_page_ssf</str>
            <str name="f.page.qf"         >journal_page_ssf</str>


            <str name="fl">*,score</str>

            <str name="facet">true</str>
            <str name="facet.mincount">1</str>
        </lst>
    </requestHandler>

    <requestHandler name="/toshokan_document" class="solr.SearchHandler" >
        <lst name="defaults">
            <str name="echoParams">all</str>
            <str name="fl">*</str>
            <str name="rows">1</str>
            <str name="q">{!raw f=id v=$id}</str> <!-- use id=666 instead of q=id:666 -->
        </lst>
    </requestHandler>

    <requestHandler name="/gazo_journal_title" class="solr.SearchHandler" >
        <lst name="defaults">
            <str name="fl">title:journal_title_ts,issn:issn_ss</str>
            <str name="rows">1</str>
            <str name="df">issn_ss</str>
        </lst>
    </requestHandler>

    <requestHandler name="/gazo_book_title" class="solr.SearchHandler" >
        <lst name="defaults">
            <str name="fl">title:title_ts,isbn:isbn_ss</str>
            <str name="rows">1</str>
            <str name="df">isbn_ss</str>
        </lst>
    </requestHandler>

    <requestHandler name="/primo" class="solr.SearchHandler" default="false">
        <lst name="defaults">
            <str name="defType">edismax</str>
            <str name="echoParams">explicit</str>

            <str name="fq">format:article</str>

            <str name="mm">100%</str>
            <str name="q.op">AND</str>

            <str name="qf">
                title_ts^10
                subtitle_ts
                abstract_ts
                author_ts
                editor_ts
                affiliation_ts
                keywords_ts
                issn_ss
                isbn_ss
                journal_title_ts
                publisher_ts
                pub_date_ti
                doi_s
            </str>
            <str name="pf">
                title_ts^5
                subtitle_ts
                abstract_ts
                author_ts
                editor_ts
                affiliation_ts
                keywords_ts
                issn_ss
                isbn_ss
                journal_title_ts
                publisher_ts
                pub_date_ti
                doi_s
            </str>

            <str name="fl">*,score</str>

            <str name="f.title.qf">title_t</str>
            <str name="f.creatorcontrib.qf">author_ts</str>
            <str name="f.journal_title.qf">journal_title_ts</str>
            <str name="f.creation_date.qf">pub_date_ti</str>
            <str name="f.isbn.qf">isbn_s</str>
            <str name="f.issn.qf">issn_s</str>

            <str name="facet">true</str>
            <str name="facet.field">{!key=creationdate}pub_date_sort</str>
            <str name="facet.field">{!key=creator}author_facet</str>
            <str name="facet.field">{!key=jtitle}journal_title_facet</str>
            <str name="facet.field">{!key=type}format</str>
            <str name="facet.field">{!key=topic}keywords_facet</str>
            <str name="facet.field">{!key=lang}iso_language_s</str>
            <str name="facet.mincount">1</str>
        </lst>
    </requestHandler>

    <searchComponent class="solr.HighlightComponent" name="highlight">
        <highlighting>
            <!-- Configure the standard fragmenter -->
            <!-- This could most likely be commented out in the "default" case -->
            <fragmenter name="gap"
                        default="true"
                        class="solr.highlight.GapFragmenter">
                <lst name="defaults">
                    <int name="hl.fragsize">100</int>
                </lst>
            </fragmenter>

            <!-- Configure the standard formatter -->
            <formatter name="html"
                       default="true"
                       class="solr.highlight.HtmlFormatter">
                <lst name="defaults">
                    <str name="hl.simple.pre"><![CDATA[<em>]]></str>
                    <str name="hl.simple.post"><![CDATA[</em>]]></str>
                </lst>
            </formatter>

            <!-- Configure the standard encoder -->
            <encoder name="html"
                     default="true"
                     class="solr.highlight.HtmlEncoder"/>

            <!-- Configure the standard fragListBuilder -->
            <fragListBuilder name="simple"
                             default="true"
                             class="solr.highlight.SimpleFragListBuilder"/>

            <!-- default tag FragmentsBuilder -->
            <fragmentsBuilder name="default"
                              default="true"
                              class="solr.highlight.ScoreOrderFragmentsBuilder">
            </fragmentsBuilder>

        </highlighting>
    </searchComponent>

    <searchComponent name="spellcheck" class="solr.SpellCheckComponent">
        <str name="queryAnalyzerFieldType">textSpell</str>

        <!-- a spellchecker built from a field of the main index -->
        <lst name="spellchecker">
            <str name="name">default</str>
            <str name="field">spell</str>
            <str name="classname">solr.DirectSolrSpellChecker</str>
            <!-- the spellcheck distance measure used, the default is the internal
           levenshtein -->
            <str name="distanceMeasure">internal</str>
            <!-- minimum accuracy needed to be considered a valid spellcheck suggestion -->
            <float name="accuracy">0.5</float>
            <!-- the maximum #edits we consider when enumerating terms: can be 1 or
           2 -->
            <int name="maxEdits">2</int>
            <!-- the minimum shared prefix when enumerating terms -->
            <int name="minPrefix">1</int>
            <!-- maximum number of inspections per result. -->
            <int name="maxInspections">5</int>
            <!-- minimum length of a query term to be considered for correction -->
            <int name="minQueryLength">4</int>
            <!-- maximum threshold of documents a query term can appear to be considered
          for correction -->
            <float name="maxQueryFrequency">0.01</float>
            <!-- uncomment this to require suggestions to occur in 1% of the documents
          <float name="thresholdTokenFrequency">.01</float> -->
        </lst>

        <!-- a spellchecker that use an alternate comparator comparatorClass be
     one of: 1. score (default) 2. freq (Frequency first, then score) 3. A fully
     qualified class name -->
        <lst name="spellchecker">
            <str name="name">freq</str>
            <str name="field">spell</str>
            <str name="classname">solr.DirectSolrSpellChecker</str>
            <!-- the spellcheck distance measure used, the default is the internal
           levenshtein -->
            <str name="distanceMeasure">internal</str>
            <!-- minimum accuracy needed to be considered a valid spellcheck suggestion -->
            <float name="accuracy">0.5</float>
            <!-- the maximum #edits we consider when enumerating terms: can be 1 or
           2 -->
            <int name="maxEdits">2</int>
            <!-- the minimum shared prefix when enumerating terms -->
            <int name="minPrefix">1</int>
            <!-- maximum number of inspections per result. -->
            <int name="maxInspections">5</int>
            <!-- minimum length of a query term to be considered for correction -->
            <int name="minQueryLength">4</int>
            <!-- maximum threshold of documents a query term can appear to be considered
          for correction -->
            <float name="maxQueryFrequency">0.01</float>
            <!-- uncomment this to require suggestions to occur in 1% of the documents
          <float name="thresholdTokenFrequency">.01</float> -->
            <str name="comparatorClass">freq</str>
        </lst>


        <!-- a spellchecker that uses a different distance measure -->
        <lst name="spellchecker">
            <str name="name">jarowinkler</str>
            <str name="field">spell</str>
            <str name="classname">solr.DirectSolrSpellChecker</str>
            <str name="distanceMeasure">org.apache.lucene.search.spell.JaroWinklerDistance</str>
            <float name="maxQueryFrequency">0.01</float>
        </lst>

        <!-- a spellchecker that uses a different distance measure -->
        <lst name="spellchecker">
            <str name="name">jarowinkler_freq</str>
            <str name="field">spell</str>
            <str name="classname">solr.DirectSolrSpellChecker</str>
            <str name="distanceMeasure">org.apache.lucene.search.spell.JaroWinklerDistance</str>
            <str name="comparatorClass">freq</str>
            <float name="maxQueryFrequency">0.01</float>
        </lst>

        <!-- a spellchecker that uses a different distance measure -->
        <lst name="spellchecker">
            <str name="name">levenstein</str>
            <str name="field">spell</str>
            <str name="classname">solr.DirectSolrSpellChecker</str>
            <str name="distanceMeasure">org.apache.lucene.search.spell.LevensteinDistance</str>
            <float name="maxQueryFrequency">0.01</float>
        </lst>

        <!-- a spellchecker that uses a different distance measure -->
        <lst name="spellchecker">
            <str name="name">levenstein_freq</str>
            <str name="field">spell</str>
            <str name="classname">solr.DirectSolrSpellChecker</str>
            <str name="distanceMeasure">org.apache.lucene.search.spell.LevensteinDistance</str>
            <str name="comparatorClass">freq</str>
            <float name="maxQueryFrequency">0.01</float>
        </lst>

    </searchComponent>

    <searchComponent name="terms" class="solr.TermsComponent"/>

    <requestHandler name="terms" class="solr.SearchHandler" startup="lazy">
        <lst name="defaults">
            <bool name="terms">true</bool>
        </lst>
        <arr name="components">
            <str>terms</str>
        </arr>
    </requestHandler>

    <requestHandler name="/replication" class="solr.ReplicationHandler" startup="lazy" />

    <requestHandler name="/get" class="solr.RealTimeGetHandler">
      <lst name="defaults">
        <str name="omitHeader">true</str>
     </lst>
    </requestHandler>

    <requestHandler name="/analysis/field" class="solr.FieldAnalysisRequestHandler" />

    <requestHandler name="/admin/"
                    class="solr.admin.AdminHandlers"/>

    <!-- Legacy config for the admin interface -->
    <admin>
        <defaultQuery>*:*</defaultQuery>
    </admin>

</config>
